<?xml version="1.0" encoding="utf-8" ?>
<configuration>
	<system.serviceModel>
		<services>
			<service name="ContactManagerService.ContactService">
				<endpoint address=""
						  binding="basicHttpBinding"
						  contract="ContactManagerService.IContactService" />
				<endpoint address="mex"
						  binding="mexHttpBinding"
						  contract="IMetadataExchange" />
				<host>
					<baseAddresses>
						<add baseAddress="http://localhost:8733/Design_Time_Addresses/ContactManagerService/ContactService/" />
					</baseAddresses>
				</host>
			</service>
		</services>

		<behaviors>
			<serviceBehaviors>
				<behavior>
					<!-- Включаем метаданные, чтобы можно было добавить Service Reference -->
					<serviceMetadata httpGetEnabled="true" />
					<!-- Для отладки показываем полные ошибки -->
					<serviceDebug includeExceptionDetailInFaults="true" />
				</behavior>
			</serviceBehaviors>
		</behaviors>
	</system.serviceModel>
</configuration>
